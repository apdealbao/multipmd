PRINT STRIDE=10 ARG=phic,phis,psic,psis,phi,psi,s,pcv.s,pcv.z,metad.bias,tube.bias FILE=/home/apdealbao/projects/CyclePMD/aladip-amber-opt/out0/COLVAR
